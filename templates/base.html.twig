<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}

             <script>
                document.addEventListener('DOMContentLoaded', () => {
                    const avatar = document.getElementById('avatar');
                    const dropdown = document.getElementById('dropdown');
                    avatar.addEventListener('click', () => {
                        dropdown.classList.toggle('active');
                    });
                });
            </script>
        {% endblock %}
    </head>
    <body class="w-screen h-screen relative bg-layout-light text-primary font-inter">
        <nav class="w-full flex items-center justify-between py-4 px-8 sticky top-0 left-O bg-layout-light  border-b-2 border-neutral-200/50 ">
            <a href="{{ path('app_home') }}" class="text-2xl font-bold">Tickify</a>
            <div class="flex items-center gap-x-5">
                <div class="flex items-center   border border-neutral-200/80 rounded-md">
                    <div class=" h-11 px-2 py-2 border-r border-neutral-200/80">
                        <img src="{{ asset('images/icons/magnifier.svg') }}" alt="avatar" class="w-full h-full rounded-full">
                    </div>
                    <input type="text" class="  w-60 h-7 pl-2 bg-transparent focus:outline-none" placeholder="Rechercher">
                </div>
                <div class="relative">
                    <button 
                    id="avatar"
                    class="w-8 h-8 flex justify-center items-center p-2 bg-outline text-white text-lg font-medium rounded-full">
                        A
                    </button>
                    <div id="dropdown" class="absolute top-12 right-0 w-48 bg-layout-light border border-neutral-200/80 rounded-md ">
                        <a href="{{ path('app_logout') }}" class="block py-2 px-4 hover:bg-neutral-200/80">Déconnexion</a>
                    </div>
                </div>
            </div>
        </nav>
        <section class="w-full h-full flex">
            <aside class="w-1/6 h-full py-16 pl-4 px-4 flex flex-col  gap-y-4 bg-layout-light text-primary border-r border-neutral-200/80 font-medium text-xl">
                <a class="w-full flex items-center gap-x-3 py-2 pl-4 hover:text-white  bg-transparent hover:bg-outline/60  rounded-md transition-colors" href="{{ path('app_project') }}">
                    <img src="{{ asset('images/aside/project.svg') }}" alt="home" class="w-6 h-6 inline-block">
                    Projets
                </a>
                <a class="w-full flex items-center gap-x-3 py-2 pl-4 hover:text-white  bg-transparent hover:bg-outline/60  rounded-md transition-colors" href="{{ path('app_ticket') }}">
                    <img src="{{ asset('images/aside/ticket.svg') }}" alt="home" class="w-6 h-6 inline-block">
                    Tickets
                </a>
                <a class="w-full flex items-center gap-x-3 py-2 pl-4 hover:text-white  bg-transparent hover:bg-outline/60  rounded-md transition-colors" href="{{ path('app_context') }}">
                    <img src="{{ asset('images/aside/ticket.svg') }}" alt="home" class="w-6 h-6 inline-block">
                    Contextes
                </a>
            </aside>
            <main class="w-5/6 h-full pt-16 px-16 flex flex-col gap-y-6">
                {% block body %}{% endblock %}
            </main>
        </section>
    </body>
</html>
