{% extends 'base.html.twig' %}

{% block title %}Tickify | Modifier un contexte{% endblock %}

{% block body %}
    {{ component('title', { content : content.title }) }}
         
    <div class="w-2/3 flex flex-col gap-y-8 justify-center items-center shadow-default rounded-xl py-10 px-8 bg-white">
        {{ form_start(form, {'attr': {'class': 'w-full flex flex-col items-center gap-y-5'}}) }}
            <div class="w-full flex flex-col gap-y-0.5 gap-x-3">
                {{ form_label(form.name, 'Nom du contexte', {'label_attr': {'class': 'mb-2 font-medium'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'w-full bg-white p-2 rounded-md border border-neutral-200/80 focus:outline-none focus:ring focus:ring-outline/20'}}) }}
            </div>
            <div class="w-full flex flex-col gap-y-0.5 gap-x-3">
                {{ form_label(form.project , 'Projet', {'label_attr': {'class': 'mb-2 font-medium'}}) }}
                {{ form_widget(form.project, {'attr': {'class': 'w-full bg-white p-2 rounded-md border border-neutral-200/80 focus:outline-none focus:ring focus:ring-outline/20'}}) }}
            </div>
             <div class="w-full flex items-center gap-x-3">
                {{ form_label(form.color, 'Couleur', {'label_attr': {'class': ' font-medium'}}) }}
                {{ form_widget(form.color, {'attr': {'class': 'cursor-pointer w-12 bg-white h-8 rounded-md  focus:outline-none focus:ring focus:ring-outline/20'}}) }}
            </div>
            <div class="w-full flex justify-between items-center">
                <a href="{{ path('app_context') }}" class="text-outline hover:text-outline/80 transition-all hover:underline">Retour</a>
                <button type="submit" class=" self-end py-1.5 px-10  rounded-md bg-transparent border border-outline text-outline  hover:bg-outline hover:text-white transition-all cursor-pointer">Modifier</button>
            </div>
    </div>
    {{ form_end(form) }}
{% endblock %}