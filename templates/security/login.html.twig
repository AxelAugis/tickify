{% extends 'auth/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="w-full h-full flex flex-col gap-y-16 justify-center items-center ">
        <h1 class="text-6xl font-bold">Bienvenu sur <span class="text-outline">Tickify</span> </h1>
    <div class="w-1/3 flex flex-col gap-y-8 justify-center items-center shadow-default rounded-xl py-10 px-8 bg-white">
        <h2 class="self-start text-3xl font-bold">Connexion Ã  mon compte</h2>
        <form method="post" class="w-full flex flex-col items-center gap-y-5">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="w-full flex flex-col gap-y-0.5 gap-x-3">
                <label for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="w-full bg-white p-2 rounded-md border border-neutral-200/80 focus:outline-none focus:ring focus:ring-outline/20" autocomplete="email" required autofocus>
            </div>
            <div class="w-full flex flex-col gap-y-0.5 gap-x-3">
                <label for="password">Password</label>
                <input type="password" name="_password" id="password" class="w-full bg-white p-2 rounded-md border border-neutral-200/80 focus:outline-none focus:ring focus:ring-outline/20" autocomplete="current-password" required>
            </div>
            {# <label for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            <label for="password">Password</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required> #}

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div>
            #}

            <div class="w-full flex justify-between items-center">
                <a href="{{ path('app_register') }}" class="text-outline transition-all hover:underline">Pas encore de compte ?</a>
                <button type="submit" class=" self-end py-2 px-10 text-lg rounded-md bg-transparent border border-outline text-outline  hover:bg-outline hover:text-white transition-all">Connexion</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
